.content-header {
  height: 400rpx;
  background-color: #3C9CFF;
  position: relative;
}
.content-header.unlogin-pic {
  padding-top: 150rpx;
}
.content-header .setting-box {
  text-align: right;
  padding-right: 20rpx;
}
.content-header .user-pic {
  width: 160rpx;
  height: 155rpx;
  border-radius: 50%;
  background-color: #fff;
  padding: 5rpx;
  margin: 0 auto;
}
.content-header .user-pic image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.content-header .login-title {
  font-size: 32rpx;
  text-align: center;
  color: #fff;
  margin-top: 20rpx;
}
.content-header .user-nickname {
  text-align: center;
  font-size: 32rpx;
  margin-top: 10rpx;
  color: #fff;
}
.content-header .user-nickname text {
  margin-right: 10rpx;
}
.content-header .interactive-box {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 20rpx;
  color: #fff;
  font-size: 28rpx;
}
.content-header .interactive-box .interactive-item {
  display: flex;
  align-items: center;
}
.content-header .interactive-box .interactive-item:last-of-type {
  margin-left: 20rpx;
}
.content-header .interactive-box .interactive-item text:first-of-type {
  width: 80rpx;
  display: inline-block;
}
.content-header .back-1, .content-header .back-2 {
  width: 100%;
  height: 50rpx;
  background-color: #3C9CFF;
  border-radius: 0 0 50% 50%;
  position: absolute;
  bottom: -20rpx;
  right: 0;
  left: 0;
}
.content-header .back-2 {
  background: linear-gradient(180deg, #3C9CFF, #fff);
  bottom: -67rpx;
}
.login-box {
  margin: 120rpx auto;
  width: 600rpx;
}
.login-box .description {
  display: flex;
  margin: 10rpx 0;
}
.login-box .description .u-radio-group {
  flex: 0 !important;
}
.login-box .description .yuedu {
  display: flex;
  align-items: center;
}
.content-body {
  position: relative;
  top: -70rpx;
  left: 0;
  right: 0;
  padding: 0 20rpx;
}
.content-body .box.card {
  display: flex;
  background-color: #fff;
  border-radius: 8px;
  z-index: 888;
}
.content-body .box.card .card-body.my-setting__btns {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
}
.content-body .box.card .card-body.my-setting__btns .my-setting__btns__item {
  width: 140rpx;
  display: flex;
  flex-direction: column;
  text-align: center;
  margin-bottom: 20rpx;
  font-size: 32rpx;
}
.content-body .box.card .card-body.my-setting__btns .my-setting__btns__item image {
  width: 80rpx;
  height: 80rpx;
  display: block;
  margin: 10rpx auto;
}
.content-body .other-info {
  margin-top: 20rpx;
}
.content-body .other-info .card-body {
  padding: 0rpx;
}
.content-body .other-info .card-body.other-info-list .other-info-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid #c4c6c9;
  padding: 20rpx;
  font-size: 32rpx;
}
.content-body .other-info .card-body.other-info-list .other-info-item:last-of-type {
  border-bottom: 0;
}
.content-body .loginout-btn {
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
  background-color: #3c9cff;
  font-size: 32rpx;
  margin: 10rpx auto 0 auto;
  border-radius: 5px;
}
.content-body .loginout-btn:active {
  background-color: #398ade;
}

