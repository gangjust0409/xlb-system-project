.xlb-header {
  display: flex;
  align-items: center;
  height: 80rpx;
  background-color: #3c9cff;
}
.xlb-header view {
  flex: 1;
  text-align: center;
}
.xlb-header view.search-input {
  flex: 6;
  background-color: #fff;
  border-radius: 10rpx;
  margin: 10rpx 0 20rpx 0;
  height: 60rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  color: #606266;
  font-size: 28rpx;
}
.xlb-header view.search-input .search-icon {
  margin: 0 10rpx 0 20rpx;
}
.weather-access-box .card-body {
  display: flex;
}
.weather-access-box .card-body .weather {
  flex: 2;
  display: flex;
  padding-right: 10rpx;
}
.weather-access-box .card-body .weather image {
  width: 90rpx;
  height: 90rpx;
  margin-right: 10rpx;
}
.weather-access-box .card-body .weather .city-weather {
  font-size: 26rpx;
  line-height: 2;
  margin-left: 5px;
}
.weather-access-box .card-body .weather .city-weather text:last-of-type {
  margin-left: 3rpx;
}
.weather-access-box .card-body .weather-no {
  font-size: 28rpx;
  text-align: center;
  line-height: 2;
}
.weather-access-box .card-body .access {
  flex: 1;
  font-size: 26rpx;
  line-height: 2;
  padding-right: 20rpx;
  text-align: right;
}
