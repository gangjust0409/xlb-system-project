.xlb-notify {
  margin-bottom: 20rpx;
}
.xlb-menu-box .xlb-menus {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.xlb-menu-box .xlb-menus .xlb-menu-item {
  display: flex;
  flex-direction: column;
  text-align: center;
}
.xlb-menu-box .xlb-menus .xlb-menu-item > image {
  width: 80rpx;
  height: 80rpx;
  margin: 0 auto;
}
.xlb-menu-box .xlb-menus .xlb-menu-item text {
  font-size: 28rpx;
}
.movie-container .movie-box .movie-list {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  padding: 0 10px;
}
.movie-container .movie-box .movie-list .movie-item {
  width: 42vw;
  padding: 15rpx;
  background-color: #fff;
  border-radius: 5px;
  margin-bottom: 20rpx;
}
.movie-container .movie-box .movie-list .movie-item .movie-pic {
  width: 300rpx;
  height: 360rpx;
  position: relative;
}
.movie-container .movie-box .movie-list .movie-item .movie-pic image {
  width: 100%;
  height: 100%;
}
.movie-container .movie-box .movie-list .movie-item .movie-pic .overy {
  display: none;
}
.movie-container .movie-box .movie-list .movie-item .movie-pic:hover .overy {
  background-color: rgba(0, 0, 0, 0.5);
  position: absolute;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  transition: all 1s;
}
.movie-container .movie-box .movie-list .movie-item .movie-name {
  font-size: 28rpx;
  margin: 10rpx 0 20rpx 0;
  font-weight: 600;
}
.movie-container .movie-box .movie-list .movie-item .movie-desction {
  font-size: 24rpx;
  height: 11%;
  line-height: 1.5;
  color: #606266;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}
.movie-container .movie-box .movie-list .movie-item .movie-genre-box {
  margin: 10rpx 0;
  display: flex;
  height: 23px;
  flex-wrap: wrap;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.movie-container .movie-box .movie-list .movie-item .movie-genre-box > view {
  margin-right: 10rpx;
}
.movie-container .movie-box .movie-list .movie-item .movie-rating {
  text-align: right;
  font-size: 24rpx;
  margin: 10rpx 0;
  color: #606266;
}

