.table-list .card .table-item {
  display: flex;
}
.table-list .card .table-item .pic {
  width: 225rpx;
  height: 250rpx;
  margin-right: 15rpx;
}
.table-list .card .table-item .movie-info {
  flex: 1;
  line-height: 2;
  display: flex;
  flex-direction: column;
}
.movie-box {
  width: 680rpx;
  height: 820rpx;
  position: relative;
}
.movie-box .movie-setting-box {
  width: 200rpx;
  padding: 30rpx 20rpx;
}
.movie-box .movie-setting-box .close {
  position: absolute;
  top: -10%;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
}
.movie-box .movie-collection-list {
  margin: 20rpx 0;
}
.movie-box.add-box {
  padding: 15rpx 25rpx;
}
.upload-videos {
  margin: 15rpx 0 0 15rpx;
  position: relative;
  overflow: hidden;
}
.upload-videos .upload-video > image {
  width: 170rpx;
  height: 190rpx;
}
.upload-videos image {
  width: 100%;
  height: 100%;
}
.progress {
  padding: 15rpx 20rpx;
}
.submit-box {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 10px;
  position: -webkit-sticky;
  position: sticky;
  bottom: 10px;
  left: 0;
  right: 0;
}
.submit-box button:last-of-type {
  margin-left: 10px;
}

