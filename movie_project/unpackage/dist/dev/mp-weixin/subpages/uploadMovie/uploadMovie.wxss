.picker-items {
  width: 100% !important;
}
.down-data {
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.down-data text {
  margin-left: 3.5px;
  color: #A2A4A6;
}
.down-data .no-active-text {
  display: flex;
}
.down-data .no-active-text text {
  margin-right: 7rpx;
}
.down-data.gener-list {
  display: flex;
  flex-direction: column;
}
.down-data.gener-list .active-box {
  display: flex;
  flex-wrap: wrap;
}
.down-data.gener-list .active-box .active-item {
  margin-right: 10rpx;
}
.upload-pic {
  width: 300rpx;
  height: 360rpx;
  margin: 15rpx 0 0 15rpx;
  position: relative;
  overflow: hidden;
}
.upload-pic image {
  width: 100%;
  height: 100%;
}
.upload-pic .deleteImg {
  position: absolute;
  top: -3px;
  right: -3px;
  width: 25px;
  height: 25px;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(0, 0, 0, 0.6);
  border-radius: 5px 0 0px 25px;
}
.submit-box {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 10px;
  position: -webkit-sticky;
  position: sticky;
  bottom: 10px;
  left: 0;
  right: 0;
}
.submit-box button:last-of-type {
  margin-left: 10px;
}
.gener-box {
  background-color: #fff;
  height: 750rpx;
}
.gener-box .gener-header {
  padding: 40rpx 60rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #666;
}
.gener-box .gener-header .cancel {
  color: #666;
}
.gener-box .gener-header .confrim {
  color: #3c9cff;
}
.gener-box .gener-body {
  padding: 40rpx 60rpx;
  overflow: auto;
  display: flex;
}
.gener-box .gener-body .u-checkbox-group {
  margin-right: 80rpx;
}

